
<!DOCTYPE html>
<html>
    <head>
        @{
            ViewData["Title"] = "Register";
        }
        <meta charset='utf-8'>
        <!-- In this context '~' refers to the wwwroot folder-->
        <link rel="stylesheet" href="~/css/style.css"/>
    </head>
    <body>
        <div class="mainbody">
            <h1>Register</h1>
            <form action="/" method="POST">
                <label for="FirstName">First Name: </label>
                <input type="text" name="FirstName" value=@ViewBag.values[0]>
                <br><label for="LastName">Last Name: </label>
                <input type="text" name="LastName" value=@ViewBag.values[1]>
                <br><label for="EmailAddress">Email Address: </label>
                <input type="email" name="EmailAddress" value=@ViewBag.values[2]>
                <br><label for="Password">Password: </label>
                <input type="password" name="Password" value=@ViewBag.values[3]>
                <br><label class="sameline" for="PasswordConfirmation">Confirm Password: </label>
                <input class="sameline" type="password" name="PasswordConfirmation" value=@ViewBag.values[4]>
                <a href="/login">Already Registered?</a><br>
                <input class="alignbutton" type="submit" value="Submit">
            </form><br>
            @{
                foreach(var error in ViewBag.errors)
                {
                //If there are any errors for a field...
                if(@error.Errors.Count > 0)
                    {
                        <p class="red align_center"><b>@error.Errors[0].ErrorMessage</b></p>
                    }
                }
            }
        </div>
    </body>
</html>