
<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        @{
            ViewData["Title"] = "Login or Register";
        }
        <link rel="stylesheet" href="~/css/site.css"/>
    </head>
    <body>
        <div class="mainbody">
            <h1>Welcome To The Wall</h1><br>
            <div>
                @{
                    foreach(var error in ViewBag.errors)
                    {
                        //If there are any errors for a field...
                        if(@error.Errors.Count > 0)
                        {
                            // We show the first error for that field
                            <p class="red"><b>@error.Errors[0].ErrorMessage</b></p>
                        }
                    }
                }
            </div>
            
            <form action="/login" method="POST">
                <h3>Login</h3>
                <label for="EmailAddress">Email Address: </label>
                <input type="text" name="EmailAddress" class="spacer" maxlength="250" value=@ViewBag.values[2]><br>
                <label for="Password">Password: </label>
                <input type="password" name="Password" class="spacer" maxlength="250" value=@ViewBag.values[3]><br><br>
                <input type="submit" value="Login">
            </form><br>

            <form action="/register" method="POST">
                <h3>Register</h3>
                <label for="FirstName">First Name: </label>
                <input type="text" name="FirstName" class="spacer" maxlength="100" value=@ViewBag.values[0]><br>
                <label for="LastName">Last Name: </label>
                <input type="text" name="LastName" class="spacer" maxlength="100" value=@ViewBag.values[1]><br>
                <label for="EmailAddress">Email Address: </label>
                <input type="text" name="EmailAddress" class="spacer" maxlength="250" value=@ViewBag.values[2]><br>
                <label for="Password">Password: </label>
                <input type="password" name="Password" class="spacer" maxlength="250" value=@ViewBag.values[3]><br>
                <label for="ConfirmPassword">Confirm Password: </label>
                <input type="password" name="ConfirmPassword" class="spacer" maxlength="250" value=@ViewBag.values[4]><br><br>
                <input type="submit" value="Submit">
            </form><br><br>
        </div>

    </body>
</html>
