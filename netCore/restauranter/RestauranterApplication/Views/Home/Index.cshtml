
<!DOCTYPE html>
<html>
    <head>
        @{
            ViewData["Title"] = "Make A Review";
        }
        <meta charset='utf-8'>
        <title>Index</title>
        <!-- In this context '~' refers to the wwwroot folder-->
        <link rel="stylesheet" href="~/css/style.css"/>
    </head>
    <body>
        <div class="mainbody">
            <h1>Write A New Review:</h1>
            @{
                foreach(var error in ViewBag.errors)
                {
                //If there are any errors for a field...
                if(@error.Errors.Count > 0)
                    {
                    // We show the first error for that field
                        if(@error.Errors[0].ErrorMessage == "The value '' is invalid."){
                            <p class="red align_center"><b>You must put in a valid date of visit.</b></p>
                        } else {
                            <p class="red align_center"><b>@error.Errors[0].ErrorMessage</b></p>
                        }
                    }
                }
            }
            <form action="/" method="POST">
                <label for="reviewerName">Reviewer Name: </label>
                <input type="text" name="reviewerName" value=@ViewBag.values[0]>
                <label for="stars">Stars: </label>
                <select name="stars">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <br><label for="restaurantName">Restaurant Name: </label>
                <input type="text" name="restaurantName" value=@ViewBag.values[1]>
                <br><label class="ownline" for="review">Review: </label>
                <textarea type="text" name="review" maxlength="250">@ViewBag.values[2]</textarea>
                <br><label for="dateOfVisit">Date of visit: </label>
                <input type="date" name="dateOfVisit">
                <input class="alignbutton" type="submit" value="Submit">
            </form>
        </div>
    </body>
</html>